@import './vars/colors.styl'
@import './vars/medias.styl'
@import './vars/shadows.styl'
@import './vars/units.styl'

header-height = 72px

.header
	height header-height
	width 100%
	top 0
	left 0
	line-height header-height
	background-color main
	text-align left
	position fixed
	box-sizing border-box
	z-index 10
	box-shadow shadow-1
	
	&__content
		padding 0 (gutter-h / 2)
		width max-width
		max-width 100vw
		position relative
		box-sizing border-box
		
		@media (min-width tablet)
			padding 0 gutter-h
			margin auto
	
	&__brand
		color text
		display inline-block
		vertical-align top
		padding-right (gutter-h / 2)
		
	&__logo
		display inline-block
		line-height header-height
		vertical-align middle

	&__nav
		display inline-block
		position absolute
		left 0
		background-color light-white
		width 100%
		max-height 0
		top header-height
		overflow hidden
		transition all .3s ease-in-out .3s
		
		li
			transition all .3s ease-in-out
			opacity 0
		
		&.m--show
			max-height calc(100vh - 72px)
			transition all .3s ease-in-out
			box-shadow shadow-1
			
			li
				transition all .3s ease-in-out .2s
				opacity 1

		@media (min-width tablet)
			background-color transparent
			position static
			width auto
			max-height none
			overflow visible
			
			li
				opacity 1
				
	&__link
		text-transform uppercase
		font-size 1rem
		font-weight 500
		vertical-align top
		padding 0 gutter-h
		
		@media (min-width tablet)
			padding 0 (gutter-h / 2)
			display inline-block

	&__cart
		position absolute
		right (gutter-h / 2)
		top 0
		bottom 0
		background-color transparent
		color text
		margin auto
		border-radius 50%
		border 0
		width 48px
		height 48px
		line-height 36px
		font-size 1.3rem
		transition all .4s ease-in-out
		cursor pointer
		
		img
			display inline-block
			width 100%

		&:hover
			opacity .75
			
		@media (min-width tablet)
			right gutter-h
	
	&__counter
		position absolute
		right 4px
		bottom 8px
		height 1.2rem
		width 1.2rem
		background-color inverted
		color main
		border-radius 50%
		line-height 1.2rem
		font-size .8rem
		
	&__menu
		margin-right (gutter-h / 2)
		line-height header-height
		font-size (gutter-v / 2)
		
		@media (min-width tablet)
			display none